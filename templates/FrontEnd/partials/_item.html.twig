                {# area <br> #}
                {# <i class="fa fa-map"></i> 4300 sq ft #}
                {# </span> #}
                {# </li> #}
            </ul>
        </div>
        <div class="card__image-footer">

            <ul class="list-inline my-auto ml-auto">


                <li class="list-inline-item ">
                    <h6 style="font-size:14px">  {{ bien.typeOptions.montant ?  (bien.typeOptions.montant|number_format(0, ' ', ' ')) ~' Cfa': '' }}
                        {{ bien.typeOptions.loyer ? (bien.typeOptions.loyer|number_format(0, ' ', ' '))~' Cfa/mois' : '' }}
                    </h6>
                </li>
                {% if bien.ProprieteOptions.Proprietes.id == 5 %}
                    <li class="list-inline-item ">
                        <a class="btn btn-success btn-cicle"
                           href="{{ path('proprietes_reservation',{'slug': bien.slug}) }}"
                           style="font-size: 10px; color:#fff">
