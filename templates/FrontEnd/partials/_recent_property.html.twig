<!-- RECENTS CITY -->
<section class="recent__property">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-6 mx-auto">
                <div class="title__head">
                    <h2 class="text-center text-capitalize">
                        Dernières publications   {{ nature_annonce }}
                    </h2>
                    {#                        <p class="text-center text-capitalize">handpicked exclusive properties by our team.</p>#}

                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="recent__property-carousel owl-carousel owl-theme">
            {% if nature_annonce == 'à vendre' %}
                {% for bien in biens %}
                    {% if bien.typeOptions.contratypes.libelle == "A vendre"%}
                        <div class="item">
                            <a href="#">
                                <div class="card__image-hover h-250">
                                    <div class="card__image-hover-overlay">
                                        <div class="listing-badges">
                                    <span class="featured">
                                        Nouveau
                                 </span>

                                        </div>
                                        <div class="card__image-content">
                                            <div class="card__image-content-desc">
                                                <h6>
                                                    {% if bien.libelle | length > 31  %}
                                                        {{ bien.libelle | slice(0,25)  | lower }}...
                                                    {% else %}
                                                        {{ bien.libelle | lower  }}
                                                    {% endif %}
                                                </h6>
{#                                                <h6>  <a href="{{ path('proprietes_show',{'id': bien.id}) }}">#}
{#                                                        {{ bien.libelle }}#}
{#                                                    </a> </h6>#}
                                                <p class="mb-0"> </p>
                                            </div>
                                            <ul class="list-inline card__hidden-content">
                                                {% if bien.proprieteOptions.nbreDouche %}
                                                    <li class="list-inline-item">
                                            <span>
                                                Douche <br>
                                                <i class="fa fa-bath"></i> {{ bien.proprieteOptions.nbreDouche }}
                                            </span>
                                                    </li>
                                                {% endif %}
                                                {% if bien.proprieteOptions.nbreChambre %}
                                                    <li class="list-inline-item">
                                            <span>
                                                Chambres <br>
                                                <i class="fa fa-bed"></i> {{ bien.proprieteOptions.nbreChambre }}
                                            </span>
                                                    </li>
                                                {% endif %}
                                                {% if bien.proprieteOptions.nbreSalon %}
                                                    <li class="list-inline-item">
                                            <span>
                                                Salon <br>
                                                <i class="fa fa-inbox"></i> {{ bien.proprieteOptions.nbreSalon }}
                                            </span>
                                                    </li>
                                                {% endif %}
                                                {% if bien.proprieteOptions.superfice %}
                                                    <li class="list-inline-item">
                                            <span>
                                                superifice <br>
                                                <i class="fa fa-map"></i> {{ bien.proprieteOptions.superfice  }}
                                            </span>
                                                    </li>
                                                {% endif %}

                                            </ul>
                                        </div>
                                        {% for img in bien.proprietesImages %}
                                            {% if loop.first %}
                                                <img src="{{ asset('images/immobiliers/') }}{{ img.name }}" alt=""
                                                     class="img-fluid h-40">
                                            {% endif %}

                                        {% endfor %}


                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}

                {% else %}
                    {% for bien in biens %}
                        {% if bien.typeOptions.contratypes.libelle != "A vendre"%}
                            <div class="item">
                                <a href="#">
                                    <div class="card__image-hover h-250">
                                        <div class="card__image-hover-overlay">
                                            <div class="listing-badges">
                                    <span class="featured">
                                        Nouveau
                                 </span>

                                            </div>
                                            <div class="card__image-content">
                                                <div class="card__image-content-desc">
                                                    <h6>
                                                        {% if bien.libelle | length > 31  %}
                                                            {{ bien.libelle | slice(0,25)  | lower }}...
                                                        {% else %}
                                                            {{ bien.libelle | lower  }}
                                                        {% endif %}
                                                    </h6>
                                                    {#                                                <h6>  <a href="{{ path('proprietes_show',{'id': bien.id}) }}">#}
                                                    {#                                                        {{ bien.libelle }}#}
                                                    {#                                                    </a> </h6>#}
                                                    <p class="mb-0"> </p>
                                                </div>
                                                <ul class="list-inline card__hidden-content">
                                                    {% if bien.proprieteOptions.nbreDouche %}
                                                        <li class="list-inline-item">
                                            <span>
                                                Douche <br>
                                                <i class="fa fa-bath"></i> {{ bien.proprieteOptions.nbreDouche }}
                                            </span>
                                                        </li>
                                                    {% endif %}
                                                    {% if bien.proprieteOptions.nbreChambre %}
                                                        <li class="list-inline-item">
                                            <span>
                                                Chambres <br>
                                                <i class="fa fa-bed"></i> {{ bien.proprieteOptions.nbreChambre }}
                                            </span>
                                                        </li>
                                                    {% endif %}
                                                    {% if bien.proprieteOptions.nbreSalon %}
                                                        <li class="list-inline-item">
                                            <span>
                                                Salon <br>
                                                <i class="fa fa-inbox"></i> {{ bien.proprieteOptions.nbreSalon }}
                                            </span>
                                                        </li>
                                                    {% endif %}
                                                    {% if bien.proprieteOptions.superfice %}
                                                        <li class="list-inline-item">
                                            <span>
                                                superifice <br>
                                                <i class="fa fa-map"></i> {{ bien.proprieteOptions.superfice  }}
                                            </span>
                                                        </li>
                                                    {% endif %}

                                                </ul>
                                            </div>
                                            {% for img in bien.proprietesImages %}
                                                {% if loop.first %}
                                                    <img src="{{ asset('images/immobiliers/') }}{{ img.name }}" alt=""
                                                         class="img-fluid h-40">
                                                {% endif %}

                                            {% endfor %}


                                        </div>
                                    </div>
                                </a>
                            </div>
                        {% endif %}
                    {% endfor %}
            {%  endif %}





        </div>
    </div>
</section>
<!-- END RECENTS CITY -->