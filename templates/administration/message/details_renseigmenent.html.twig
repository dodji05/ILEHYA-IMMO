{% extends 'administration/index.html.twig' %}

{% block title %}Hello MessageController!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="utils__title">Details du message

                       <strong> {{ message.dateMessage ?message.dateMessage|date('d-m-Y') : '' }} </strong>
                    </div>


                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <tbody>
                            <tr>
                                <th>Visiteur </th>
                                <td>{{ message.visiteur.nom ~" " ~ message.visiteur.prenoms }}</td>
                            </tr>
                            <tr>
                                <th>Contact </th>
                                <td>{{ message.visiteur.telephone }} --
                                    {{ message.visiteur.email }}</td>
                            </tr>
                            <tr>
                                <th>Bien </th>
                                <td>{{  message.proprietes.libelle }}</td>
                            </tr>
                            <tr>
                                <th>Message </th>
                                <td>{{ message.message }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="float-right">
                        <form method="post" action="{{ path('admin_message_delete', {'id': message.id}) }}"
                              onsubmit="return confirm('Etes-vous de vouloir supprimer cet message?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ message.id) }}">
                            <button class="btn btn-outline-danger"> <i class="fas fa-trash"></i> Supprimer le message</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
