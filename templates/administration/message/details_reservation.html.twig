{% extends 'administration/index.html.twig' %}

{% block title %}Hello MessageController!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="utils__title">Details de la demande de reservation

                       <strong> {{ reservation.dateReservation ? reservation.dateReservation |date('d-m-Y') : '' }} </strong>
                    </div>


                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <tbody>
                            <tr>
                                <th>Client  </th>
                                <td>{{ reservation.premon ~" " ~ reservation.premon }}</td>
                            </tr>
                            <tr>
                                <th>Contact </th>
                                <td>{{ reservation.email }} --
                                    {{ reservation.telephone }}</td>
                            </tr>
                            <tr>
                                <th>Appartement </th>
                                <td>{{  reservation.appartement.libelle }}</td>
                            </tr>
                            <tr>
                                <th>Date debut reservation </th>
                                <td>{{ reservation.dateDebut ? reservation.dateDebut |date('d-m-Y') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Date fin reservation </th>
                                <td>{{ reservation.dateFin ? reservation.dateFin |date('d-m-Y') : '' }}</td>
                            </tr>
                            {% if reservation.note %}
                            <tr>
                                <th>Note </th>
                                <td>{{ reservation.note }}</td>
                            </tr>
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
