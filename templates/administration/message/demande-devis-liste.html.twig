{% extends 'administration/index.html.twig' %}

{% block title %}Hello MessageController!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">

                            <thead class="thead-default">
                            <tr>
                                <th>Client</th>
                                <th>Appartement</th>

                                <th>Date debut</th>
                                <th>Date fin</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for reservation in reservations %}
                                <tr>
                                    <th>{{ reservation.nom ~ ' '~ reservation.premon }}</th>
                                    <th>{{ reservation.appartement.libelle }}</th>

                                    <th>{{ reservation.dateDebut | date('d-m-Y') }}</th>
                                    <th>{{ reservation.datefin | date('d-m-Y') }}</th>
                                    <th><a href="{{ path('admin_reservation_details',{'id':reservation.id}) }}"> <i class="fas fa-eye "></i></a></th>
                                </tr>
                            {% endfor %}
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
